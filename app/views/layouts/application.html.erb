<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8" />

	<!-- Uncomment to make IE8 render like IE7 -->
	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

	<!-- Included CSS Files -->
	<%= stylesheet_link_tag    "application" %>

	<!-- Included JS Files  -->
	<%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="top-bar">
    <ul>
      <li class="name"><h1><a href="#">MustSurfNow.com</a></h1></li>
      <li class="toggle-topbar"><a href="#"></a></li>
    </ul>
    <section>
      <!--<ul class="left">-->
        <!--<li><a href="#"></a></li>-->
      <!--</ul>-->

      <ul class="right">
        <li class="search">
          <form class="collapse">
            <input type="text" placeholder="Zip code...">
            <button type="submit" class="secondary radius button">Go</button>
          </form>
        </li>
        <li><a href="#">Feedback</a></li>
      </ul>
    </section>
  </nav>

  <div>
    <div class="twelve columns">
      <div class="alert-box">
        Location: <a href="#change_location"></a>
        <!--<a href="" class="close">&times;</a>-->
      </div>
    </div>
  </div>

  <div>
    <div class="four mobile-one columns">
      <div class="panel">

        <% if @spots %>
          <h5>Nearest locations to you:</h5>

          <ul class="nav-bar vertical">
            <%= @spots.each do |spot| %>
              <li class=""> <!-- add "active" class -->
                <%= link_to spot.name, { :controller => :surf_spots, :action => :show, :id => spot.id } %>
              </li>
            <% end %>
          </ul>
        <% end %>

      </div>
    </div>

    <div class="eight mobile-three columns">
      <div class="panel">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
